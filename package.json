{
  "name": "push-notifications-poc",
  "version": "1.0.0",
  "description": "PoC de Push Notifications com Node.js + Express + React",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "cd packages/backend && npm run dev",
    "start:backend": "cd packages/backend && npm start",
    "test:backend": "cd packages/backend && ./test-api.sh",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build:frontend": "cd packages/frontend && npm run build",
    "preview:frontend": "cd packages/frontend && npm run preview",
    "install:all": "npm install && cd packages/backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend",
    "mobile:sync": "cd packages/frontend && npm run cap:sync",
    "mobile:android": "cd packages/frontend && npm run cap:open:android",
    "mobile:ios": "cd packages/frontend && npm run cap:open:ios",
    "mobile:dev": "concurrently \"npm run dev:backend\" \"cd packages/frontend && npm run cap:sync && npm run cap:open:android\"",
    "get-ip": "node scripts/get-ip.js"
  },
  "keywords": [
    "push-notifications",
    "fcm",
    "express",
    "react",
    "poc"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
